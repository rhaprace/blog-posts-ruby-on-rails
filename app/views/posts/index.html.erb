<div class="container">
  <div class="header">
    <h1>Blog Posts</h1>
    <%= link_to "New Post", new_post_path, class: "btn btn-primary" %>
  </div>

  <% if @posts.any? %>
    <div class="posts-list">
      <% @posts.each do |post| %>
        <div class="post-card">
          <h2><%= link_to post.title, post_path(post) %></h2>
          <p class="post-meta">Published on <%= post.publish_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          <p class="post-excerpt"><%= truncate(post.content, length: 200) %></p>
          <div class="post-actions">
            <%= link_to "Read More", post_path(post), class: "btn btn-secondary" %>
            <%= link_to "Edit", edit_post_path(post), class: "btn btn-secondary" %>
            <%= button_to "Delete", post_path(post), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="no-posts">No published posts yet. <%= link_to "Create your first post!", new_post_path %></p>
  <% end %>
</div>
